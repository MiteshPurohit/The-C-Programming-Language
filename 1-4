#include <stdio.h>
int main ()
{
    float celsius,fahr;
    int lower,upper,step;
    lower = 0;
    upper = 300;
    step = 20;
    while (fahr <= upper) {
        celsius = (5.0/9.0) * (fahr-32.0);
        printf("  %6.1f |%0.3f\n -----------------\n",celsius,fahr);
        fahr = fahr + step;
    }
    return 0;
}